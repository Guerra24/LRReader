<ContentDialog
	x:Class="LRReader.UWP.Views.Dialogs.CreateCategory"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:LRReader.UWP.Views.Dialogs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Uid="/Dialogs/CreateCategory/Dialog"
	IsPrimaryButtonEnabled="False"
	Style="{StaticResource DefaultContentDialogStyle}"
	PrimaryButtonStyle="{StaticResource AccentButtonStyle}"
	mc:Ignorable="d">

	<StackPanel Spacing="10">
		<TextBox x:Name="CategoryName" x:Uid="/Dialogs/CreateCategory/CategoryName" TextChanging="CategoryName_TextChanging" />
		<TextBox x:Name="SearchQuery" x:Uid="/Dialogs/CreateCategory/SearchQuery" />
		<ToggleSwitch x:Name="Pinned" x:Uid="/Dialogs/CreateCategory/Pinned" />
		<TextBlock Name="CategoryError" Foreground="#FF4141" />
	</StackPanel>
</ContentDialog>
