<controls:ModernTab
	x:Class="LRReader.UWP.Views.Tabs.SettingsTab"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:LRReader.UWP.Views.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:LRReader.UWP.Views.Tabs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	xmlns:settings="using:LRReader.UWP.Views.Content.Settings"
	x:Uid="/Tabs/Settings/Tab"
	d:DesignHeight="300"
	d:DesignWidth="400"
	CustomTabId="Settings"
	Loaded="UserControl_Loaded"
	Template="{StaticResource MicaTabViewItemTemplate}"
	mc:Ignorable="d">
	<muxc:TabViewItem.IconSource>
		<muxc:SymbolIconSource Symbol="Setting" />
	</muxc:TabViewItem.IconSource>

	<controls:ModernPageTab x:Uid="/Tabs/Settings/Tab">
		<controls:ModernPageTabItem x:Uid="/Settings/GeneralPage" Icon="&#xF8A6;" Page="settings:General" />
		<controls:ModernPageTabItem x:Uid="/Settings/ReaderPage" Icon="&#xE736;" Page="settings:Reader" />
		<controls:ModernPageTabItem x:Uid="/Settings/ServerPage" Icon="&#xE83B;" Page="settings:Server" />
		<controls:ModernPageTabItem x:Uid="/Settings/UpdatesPage" Icon="&#xE895;" Page="settings:Updates" />
		<controls:ModernPageTabItem x:Uid="/Settings/AboutPage" Icon="&#xE946;" Page="settings:About" />
	</controls:ModernPageTab>
</controls:ModernTab>
