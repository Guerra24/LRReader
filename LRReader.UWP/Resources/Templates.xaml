	<Style x:Key="TagsFlyoutStylePresenter" BasedOn="{StaticResource DefaultFlyoutPresenterStyle}" TargetType="FlyoutPresenter">
		<Setter Property="Padding" Value="4" />
		<Setter Property="MinHeight" Value="0" />
