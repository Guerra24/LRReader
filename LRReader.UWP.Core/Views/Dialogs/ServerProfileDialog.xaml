<ContentDialog
	x:Class="LRReader.Views.Dialogs.ServerProfileDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:LRReader.Views.Dialogs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Server Profile"
	CloseButtonText="Cancel"
	IsPrimaryButtonEnabled="False"
	PrimaryButtonText="Add"
	mc:Ignorable="d">

	<StackPanel>
		<TextBox
			Name="ProfileName" Margin="0,0,0,10" x:FieldModifier="public"
			PlaceholderText="Profile Name" TextChanging="ProfileName_TextChanging" />
		<TextBox
			Name="ProfileServerAddress" Margin="0,0,0,10" x:FieldModifier="public"
			PlaceholderText="Server Address" TextChanging="ProfileServerAddress_TextChanging" />
		<PasswordBox
			Name="ProfileServerApiKey" Margin="0,0,0,10" x:FieldModifier="public"
			PlaceholderText="API Key" />
		<TextBlock Name="ProfileError" Foreground="#FF4141" />
	</StackPanel>
</ContentDialog>
