<controls:TabViewItem
	x:Class="LRReader.Views.Tabs.BookmarksTab"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:Microsoft.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:LRReader.Views.Tabs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:content="using:LRReader.Views.Tabs.Content"
	d:DesignHeight="300"
	d:DesignWidth="400"
	Header="Bookmarks"
	mc:Ignorable="d">
	<controls:TabViewItem.IconSource>
		<controls:FontIconSource FontFamily="Segoe MDL2 Assets" Glyph="&#xE728;" />
	</controls:TabViewItem.IconSource>

	<content:BookmarksTabContent x:Name="TabContent"/>
</controls:TabViewItem>
