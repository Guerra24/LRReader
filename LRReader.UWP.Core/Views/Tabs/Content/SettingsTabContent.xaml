<UserControl
	x:Class="LRReader.Views.Tabs.Content.SettingsTabContent"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:LRReader.Views.Tabs.Content"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:settings="using:LRReader.Views.Tabs.Content.Settings"
	DataContext="{Binding SettingsPageInstance, Source={StaticResource Locator}}"
	Loaded="UserControl_Loaded"
	mc:Ignorable="d">

	<Grid Padding="20,10">
		<Pivot>
			<settings:GeneralPivot />
			<settings:ReaderPivot />
			<settings:ServerPivot />
			<settings:AboutPivot />
		</Pivot>
	</Grid>
</UserControl>
