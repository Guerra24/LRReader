<PivotItem
	x:Class="LRReader.Views.Tabs.Content.Settings.AboutPivot"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:LRReader.Views.Tabs.Content.Settings"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	DataContext="{Binding SettingsPageInstance, Source={StaticResource Locator}}"
	Header="About"
	mc:Ignorable="d">

	<ScrollViewer Padding="12,0" VerticalScrollBarVisibility="Auto">
		<StackPanel Padding="30,20" HorizontalAlignment="Left">
			<TextBlock Margin="0,0,0,10">
				<Run>LRReader version</Run>
				<Run Text="{x:Bind Data.Version}" />
			</TextBlock>
			<HyperlinkButton Content="Open on Github" NavigateUri="https://github.com/Guerra24/LRReader" />
		</StackPanel>
	</ScrollViewer>
</PivotItem>
