<UserControl
	x:Class="LRReader.Views.Items.ReaderImage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:LRReader.Views.Items"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="300"
	d:DesignWidth="400"
	DataContextChanged="UserControl_DataContextChanged"
	mc:Ignorable="d">

	<ScrollViewer
		Name="ScrollViewer" DoubleTapped="ScrollViewer_DoubleTapped" HorizontalScrollBarVisibility="Auto"
		SizeChanged="ScrollViewer_SizeChanged" VerticalScrollBarVisibility="Auto" ZoomMode="Enabled">
		<StackPanel
			x:Name="ImagesRoot" HorizontalAlignment="Center" Orientation="Horizontal"
			SizeChanged="ImagesRoot_SizeChanged">
			<Image Name="LeftImage" />
			<Image Name="RightImage" />
		</StackPanel>
	</ScrollViewer>
</UserControl>
